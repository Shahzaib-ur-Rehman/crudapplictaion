    <style>
        .user_edit_icon{
            background-color: rgb(255, 255, 255);
            padding: 7px 8px;
            margin-left: 5px;
            box-shadow: 0px 0px 5px 1px rgba(255, 206, 206, 0.75);
        }
        .input_field{
            margin: 0 5px;

        }
        .Form_Control{
            background-color: rgb(255, 254, 254);
            box-shadow: 0px 0px 5px -2px rgba(0,0,0,0.75);
            margin-top: 30px;
            padding: 20px;

        }
    </style>

    <title>Crud Application</title>
  </head>
  <body>
    <%- include('templates/_navbar') %>
    <main class="container mt-5">
        
        <div class="row">
            <div class="col-md-8 col-12 mx-auto">
                <a href="/"><button  class="btn btn-outline-success"><i class="fas fa-angle-double-left mr-1"></i>View Users</button></a>
                <div class="container Form_Control">
                    <div class="heading text-center">
                     <h4>Update User</h4>
                     <span>Use the below form to update an Account </span>
                    </div>
                    <form method="POST" id="update_user">
                        <div class="row">
                            <div class="col-md-10 mx-auto">
                                <div class="row">
                                    <div class="col-12">
                                        <div class="form-group">
                                            <label for="Name">Name</label>
                                            <input type="hidden" class="form-control" name="_id" value="<%=user._id%>"> 
                                            <input type="text" class="form-control" name="Name" value="<%=user.name%>"> 
                                          </div>
                                          <div class="form-group">
                                            <label for="email">Email</label>
                                            <input type="email" class="form-control" name="email" value="<%=user.Email%>">
                                          </div>
                                          <div class="form-group">
                                            <label for="gender">Gender</label>
                                            <input type="radio"  name="gender" class="input_field ml-5" value="Male" <%= user.Gender == 'Male'?'checked':''%>>
                                            <span>Male</span>
                                            <input type="radio"  name="gender" class="input_field ml-4" value="Female" <%= user.Gender == 'Female'?'checked':''%>>
                                            <span>Female</span>
                                          </div>
                                          <div class="form-group">
                                            <label for="status">Status</label>
                                            <input type="radio"  name="status" class="input_field" style="margin-left: 56px;" value="Active" <%= user.status== 'Active'?'checked':''%>>
                                            <span>Active</span>
                                            <input type="radio"  name="status" class="input_field" style="margin-left: 16px;" value="not active" <%= user.status == 'not active'?'checked':''%>>
                                            <span>Not Active</span>
                                          </div>
                                          <div class="form-group mt-3">
                                            <input type="submit" class="btn btn-outline-success px-5" value="Update">
                                          </div>
                                </div>
                            </div>
                        </div>
                      </form>
                </div>
            </div>
        </div>
    </main>

    <!-- Optional JavaScript; choose one of the two! -->

    <!-- Option 1: jQuery and Bootstrap Bundle (includes Popper) -->
    <script src="https://code.jquery.com/jquery-3.6.0.min.js" integrity="sha256-/xUj+3OJU5yExlq6GSYGSHk7tPXikynS7ogEvDej/m4=" crossorigin="anonymous"></script>
    <script src="/js/index.js"></script>
